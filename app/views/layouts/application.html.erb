<!DOCTYPE html>
<html>
  <head>
    <title>Todo</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="html_body">
  <div class="header">
    <div class='title'>ToDo</div>
    <% if logged_in? %>
      <div class="user"><%= current_user.username %>さん</div>
    <% end %>
  </div>
  <div class="navigation">
    <ul class="navbar">
      <% if logged_in? %>
        <li class="nav-list"><%= link_to 'タスク作成', new_task_path %></li>
        <li class="nav-list"><%= link_to '一覧',  tasks_path %></li>
        <li class="logout"><%= link_to 'ログアウト' ,logout_path, method: :delete  %></li>
      <% end %>
    </ul>
  </div>
  <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>" role="alert"><%= value %></div>
  <% end %>
    <%= yield %>

    <script>
      $(function(){
        $(".alert").fadeOut(5000);
      });
    </script>
  </body>
</html>
