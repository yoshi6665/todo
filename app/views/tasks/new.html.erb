<div class="task-new-wrapper" >
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center">タスク作成</h1>
        <%= form_for @task do |f| %>
          <div class="form-group">
            <%= f.label :タスク名 %>
            <%= f.text_field :title %>
          </div>

          <div class="form-group">
            <%= f.label :説明 %>
            <%= f.text_area :description, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :終了予定日 %>
            <%= f.date_field :finish_schedule_date, class: 'form-control' , value: Date.new%>
          </div>

          <div class="form-group">
            <%= f.label :優先度 %>
            <%= f.select :priority, Task.priorities.keys %>
          </div>



          <%= f.submit '保存', class: 'btn btn-black btn-block' %>

        <% end %>


      </div>
    </div>
  </div>
</div>
